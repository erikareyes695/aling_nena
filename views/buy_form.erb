    <div class="container">
	   <div class="index_body">
       
        <h2><%= @product.name %> - Php <%= @product.price %> - <%= @product.quantity %></h2>
      </div>
    
    <div class = "index_body">
    	<form method = "POST" action = "/buy_product/<%=@product.id%>">
    	 <div class="form-group">
              <label for="quantity" class="col-sm-2 control-label">Quantity</label>
              <div class="col-sm-10">
                <input type="text" name="quantity" placeholder="Enter quantity of product" value="0">
              </div>
      </div>
    </div>
    	
      <div class="index_body">
      <br />
    <div>
    	<h3>Money:</h3>
      <div class="form-group">
              <label for="ones" class="col-sm-2 control-label">Ones</label>
              <div class="col-sm-10">
                <input type="text" name="ones" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="fives" class="col-sm-2 control-label">Fives</label>
              <div class="col-sm-10">
                <input type="text" name="fives" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="tens" class="col-sm-2 control-label">Tens</label>
              <div class="col-sm-10">
                <input type="text" name="tens" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="twenties" class="col-sm-2 control-label">Twenties</label>
              <div class="col-sm-10">
                <input type="text" name="twenties" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="fifties" class="col-sm-2 control-label">Fifties</label>
              <div class="col-sm-10">
                <input type="text" name="fifties" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="hundreds" class="col-sm-2 control-label">Hundreds</label>
              <div class="col-sm-10">
                <input type="text" name="hundreds" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="five_hundreds" class="col-sm-2 control-label">Five Hundreds</label>
              <div class="col-sm-10">
                <input type="text" name="five_hundreds" value="0">
              </div>
      </div>
      <div class="form-group">
              <label for="thousands" class="col-sm-2 control-label">Thousands</label>
              <div class="col-sm-10">
                <input type="text" name="thousands" value="0">
              </div>
      </div>
      <br /> <br />
      <input type="submit" class="btn btn-default btn-primary" value = "Buy">
      <a href="/products" class="btn btn-default">Cancel</a>
      </form>
    </div>

  </div>

